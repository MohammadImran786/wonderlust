<% layout("layouts/boilerplate")%>
     
     <div class="row my-2">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
            <div class="valid-feedback">Your Title shold be Catchy</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
             <textarea name="listing[description]" type="text" class="form-control" required><%=listing.description%></textarea>
             <div class="invalid-feedback">Description is Required</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Your Image URl/Link</lable>
            <input name="listing[image]" value="<%=listing.image%>" type="text" class="form-control" required>
            <div class="invalid-feedback">Image URL should be correct</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
             <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
             <div class="invalid-feedback">Enter Fair Price </div>
            </div>
            <div class="mb-3 col-md-8">
             <lable for="country" class="form-label">Country</lable>
             <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
             <div class="invalid-feedback">Country Name should be correct</div>
            </div>
        </div>
        
        <div class="mb-3">
             <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required>
            <div class="invalid-feedback">Location should be correct</div>
        </div>
        
        <button class="btn btn-dark edit-btn mt-3">Edit</button>

    </form>
  </div>
</div>
    