<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
         <!-- <br><br/> -->
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
       
        <div class="mb-3">
             <lable for="title" class="form-label">Title</lable>
             <input name="listing[title]" 
             placeholder="Enter a catchy Title" 
             type="text" class="form-control"/>
        </div>

        <div class="mb-3">
            <lable for="Description" class="form-label">Description</lable>
            <textarea name="listing[description]"
             type="text"  
             class="form-control"></textarea>
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable>
            <input name="listing[image]" placeholder="Enter your image url/link" type="text" class="form-control"/>
        </div>

        <div class="row">
         <div  class="mb-3 col-md-4">
            <lable for="price" class="form-label">Enter Price</lable>
            <input name="listing[price]" placeholder="12000" type="number" class="form-control"/>
        </div>
        <div  class="mb-3 col-md-8">
            <lable for="country" class="form-label">India</lable>
            <input name="listing[country]" placeholder="Enter Country Name" type="text" class="form-control"/>
        </div>
       </div>

        <div  class="mb-3">
            <lable for="location" class="form-label">Enter Location</lable>
            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control"/> 
        </div>
       
        <button class="btn btn-dark add-btn">Add</button>

    </form>
    <br><br/>
    </div>
</div>
    
